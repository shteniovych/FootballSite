@model FC_B13.Models.DB.Profession

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Додавання нової професії</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProfessionName" class="control-label">Назва</label>
                <input asp-for="ProfessionName" class="form-control" />
                <span asp-validation-for="ProfessionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавити" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
