@model FC_B13.Models.DB.Inventar

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалення інвентаря</h2>
<h3>Ви впевнені, що хочете видалити це?</h3>
<div class="informationAboutStaff">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Назва
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InventarName)
        </dd>
        <dt>
            Кількість
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt>
            Команда
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.NameTeam)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="InventarId" />
        <input type="submit" value="Видалити" class="btn btn-lg btn-primary btn-block" />
    </form>
</div>
<a asp-action="Index">Назад до списку</a>