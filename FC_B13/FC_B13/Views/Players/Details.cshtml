@model FC_B13.Models.DB.Player

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        margin-top: 50px;
        margin-bottom: 50px;
        color: blue;
        text-align: center;
    }
</style>


<h2>Деталі</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ім'я
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Дата народження
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfBirhday)
        </dd>
        <dt>
            Позиція
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoleOnTheField)
        </dd>
        <dt>
            Номер
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt>
            Адреса
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            Номер телефону
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            Національність
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Citizenship)
        </dd>
        <dt>
            Ріст
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Growth)
        </dd>
        <dt>
            Вага
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt>
            Номер контракту
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contract.ContractId)
        </dd>
        <dt>
            Команда
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.NameTeam)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PlayerId">Редагувати</a><br />
    <a asp-action="Index">Назад до списку</a>
</div>
