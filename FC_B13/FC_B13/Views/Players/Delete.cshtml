@model FC_B13.Models.DB.Player

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалення гравця</h2>
<h3>Ви впевнені, що хочете видалити це?</h3>
<div class="informationAboutStaff">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ім'я
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Дата народження
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfBirhday)
        </dd>
        <dt>
            Позиція
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoleOnTheField)
        </dd>
        <dt>
            Номер
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt>
            Адреса
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            Номер телефону
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            Національність
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Citizenship)
        </dd>
        <dt>
            Ріст
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Growth)
        </dd>
        <dt>
            Вага
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt>
            Контракт
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Contract.ContractId)
        </dd>
        <dt>
            Команда
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Team.NameTeam)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlayerId" />
        <input type="submit" value="Видалити" class="btn btn-lg btn-primary btn-block" /> <br />
    </form>
</div>
