@model FC_B13.Models.DB.Player

@{
    ViewData["Title"] = "Редагування гравця";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h2 {
        margin-top: 50px;
        margin-bottom: 50px;
        color: blue;
        text-align: center;
    }
    .form-edit {
        max-width: 380px;
        padding: 15px 35px 45px;
        margin: 0 auto;
        text-align:center;
    }
</style>

<h2>Редагування інформації про гравця</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="form-edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlayerId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirhday" class="control-label">Дата народження</label>
                <input asp-for="DateOfBirhday" class="form-control" />
                <span asp-validation-for="DateOfBirhday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleOnTheField" class="control-label">Позиція на полі</label>
                <input asp-for="RoleOnTheField" class="form-control" />
                <span asp-validation-for="RoleOnTheField" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Номер</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Адреса</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Номер телефону</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Citizenship" class="control-label">Національність</label>
                <input asp-for="Citizenship" class="form-control" />
                <span asp-validation-for="Citizenship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Growth" class="control-label">Ріст</label>
                <input asp-for="Growth" class="form-control" />
                <span asp-validation-for="Growth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Вага</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label">Команда</label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractId" class="control-label">Номер контракту</label>
                <select asp-for="ContractId" class="form-control" asp-items="ViewBag.ContractId"></select>
                <span asp-validation-for="ContractId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
