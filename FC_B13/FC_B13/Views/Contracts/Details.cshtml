@model FC_B13.Models.DB.Contract

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Деталі</h2>

<div>
    <h4>Номер контракту @Model.ContractId</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Зарплата
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt>
            Дата закінчення контракту
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt>
            Дата укладання контракту
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ConclusionTime)
        </dd>
        <dt>
            Дата початку дії контракту
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            Чи дійсний контракт
        </dt>
        <dd>
            @Html.DisplayFor(model => model.InForseContract)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ContractId">Редагувати</a> <br />
    <a asp-action="Index">Назад до списку</a>
</div>
