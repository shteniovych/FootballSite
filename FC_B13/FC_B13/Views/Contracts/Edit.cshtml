@model FC_B13.Models.DB.Contract

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редагування контракту під номером @Model.ContractId</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContractId" />
            <div class="form-group">
                <label asp-for="Salary" class="control-label">Зарплата</label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label">Час закінчення контракту</label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConclusionTime" class="control-label">Час укладання контракту</label>
                <input asp-for="ConclusionTime" class="form-control" />
                <span asp-validation-for="ConclusionTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Час початку дії контракту</label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InForseContract" class="control-label">Чи дійсний контракт</label>
                <select asp-for="InForseContract" class="form-control">
                    <option value="True">Дійсний</option>
                    <option value="False">Недійсний</option>
                </select>
                <span asp-validation-for="InForseContract" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-lg btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
